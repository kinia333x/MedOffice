@model IEnumerable<MedOffice.Models.ApplicationUser>

<br /><br />
@using (Html.BeginForm("WorkerSearch", "Search", FormMethod.Get))
{
    @Html.TextBox("searching")<input type="submit" value="Szukaj" />
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Imię</th>
            <th>Nazwisko</th>
            <th>Pesel</th>
            <th>Specjalizacja</th>
        </tr>
    </thead>
    <tbody>
        @if(Model.Count() == 0)
        {
            <tr>
                <td colspan="3" style="color:red">
                    Brak wyników
                </td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
            <tr>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.UserName</td>
                <td>@item.Specialization</td>
                <td>@Html.ActionLink("Edit", "Edit", new { id = item.Id }) </td>

</tr>
            }
        }
    </tbody>
</table>