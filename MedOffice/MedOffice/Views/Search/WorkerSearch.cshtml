@{
    ViewBag.Title = "WorkerSearch";
}

<h2>WorkerSearch</h2>

@model IEnumerable<MedOffice.Models.ApplicationUser>

<br /><br />
@using (Html.BeginForm())
{
    @Html.TextBox("searching")<input type="submit" value="Szukaj" />
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.ActionLink("Imię", "WorkerSearch", new { sortOrder = ViewBag.NameSortParm })</th>
            <th>@Html.ActionLink("Nazwisko", "WorkerSearch", new { sortOrder = ViewBag.SurnameSortParm })</th>
            <th>@Html.ActionLink("Pesel", "WorkerSearch", new { sortOrder = ViewBag.UserNameSortParm })</th>
            <th>@Html.ActionLink("Specjalizacja", "WorkerSearch", new { sortOrder = ViewBag.SpecializationSortParm })</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="3" style="color:red">
                    Brak wyników
                </td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Surname</td>
                    <td>@item.UserName</td>
                    <td>@item.Specialization</td>
                    <td>
                        @Html.ActionLink("Edycja", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Szczegóły", "Index", "Scheduler", new { id = item.UserName }, null) |
                        @Html.ActionLink("Usuń", "Delete", "Account", new { id = item.Id }, null)
                    </td>
            </tr>
        }
    }
    </tbody>
</table>
