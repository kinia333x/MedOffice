@model MedOffice.Models.Appointment

@{
    ViewBag.Title = "Tworzenie wizyty";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Utwórz nową wizytę</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
