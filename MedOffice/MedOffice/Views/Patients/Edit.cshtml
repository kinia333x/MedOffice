@model MedOffice.Models.Patient

@{
    ViewBag.Title = "Edycja danych pacjenta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-offset-0-5 col-md-4regt">
    <h2>@ViewBag.Title.</h2>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
